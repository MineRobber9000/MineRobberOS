oldC = term.clear
term.clear = function () oldC(); term.setCursorPos(1,1); end
term.clear()
function changecolor(color)
if term.isColor() then
  term.setTextColor(color)
end
end
changecolor(colors.yellow)
print("MineRobberOS")
while true do
changecolor(colors.white)
write(">")
input = read()
shell.run(input)
end
